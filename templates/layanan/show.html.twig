{% extends 'base.html.twig' %}

{% block title %}Layanan
{% endblock %}

{% block body %}

	<div class="container">
		<h4>{{ layanan.name }}</h4>
		<div class="d-inline-flex gap-5">
			<figure class="figure col-4">
				<img src="{{ asset('img/' ~ layanan.image) }}" class="figure-img img-fluid rounded" alt="{{ layanan.name }}">
			</figure>
			<div>
				<figcaption class="figure-caption">{{ layanan.description|raw }}</figcaption>
				<table class="table">
					<tbody>
						<tr>
							<th>Category</th>
							<td>{{ layanan.category }}</td>
						</tr>
						<tr>
							<th>Price</th>
							<td>{{ layanan.price|format_currency('IDR') }}</td>
						</tr>
						<tr>
							<th>Created</th>
							<td>{{ layanan.created ? layanan.created|date('Y-m-d') : '' }}</td>
						</tr>
						<tr>
							<th>Updated</th>
							<td>{{ layanan.updated ? layanan.updated|date('Y-m-d H:i:s') : '' }}</td>
						</tr>
					</tbody>
				</table>
				<div class="d-inline-flex gap-1 text-capitalize">
					<a href="{{ path('layanan_index') }}" class="btn btn-sm btn-outline-info">back to list</a>
					<a href="{{ path('layanan_edit', {'id': layanan.id}) }}" class="btn btn-sm btn-outline-warning">edit</a>
					<div>{{ include('layanan/_delete_form.html.twig') }}</div>
				</div>
			</div>
		</div>
	</div>


{% endblock %}
